import sqlite3

# Connect to the database
conn = sqlite3.connect('barcode_records.db')
cursor = conn.cursor()

# Execute a query to fetch table information
cursor.execute('''PRAGMA table_info(barcode_records)''')
columns = cursor.fetchall()

# Print the column names and details
print("Table Columns:")
for column in columns:
    print(column)

# Close the database connection
conn.close()
